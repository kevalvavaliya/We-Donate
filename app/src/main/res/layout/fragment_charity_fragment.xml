<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:paddingLeft="22dp"
    android:paddingTop="10dp"
    android:paddingRight="22dp"
    android:paddingBottom="10dp"
    android:weightSum="3"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:fontFamily="sans-serif"
        android:gravity="bottom"
        android:paddingLeft="5dp"
        android:paddingTop="30dp"
        android:text="Hello, "
        android:textColor="@color/black"
        android:textSize="34dp"
        android:id="@+id/user_name"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:fontFamily="sans-serif"
        android:paddingLeft="5dp"
        android:text="We wish you have a good day"
        android:textColor="#41abb7"
        android:textSize="18dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:background="@drawable/cardview_back"
        android:backgroundTint="#ffd91d"
        android:elevation="300dp"
        android:paddingBottom="10dp"
        android:id="@+id/request_donation"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:fontFamily="@font/alatsi_regular"
            android:text="Request Donations"
            android:gravity="center"
            android:textColor="#a54c00"
            android:textSize="28dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:src="@drawable/donation_home" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1.5"
        android:orientation="vertical"
        android:paddingTop="5dp"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.12"
            android:fontFamily="@font/alatsi_regular"
            android:paddingLeft="5dp"
            android:text="Categories"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.42"
            android:padding="8dp"
            android:weightSum="1">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@drawable/cardview_back"
                android:backgroundTint="#62d8f1"
                android:padding="8dp"
                android:weightSum="2">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/amenities" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/alatsi_regular"
                        android:gravity="bottom"
                        android:text="Your Donations"
                        android:textAlignment="center"
                        android:textColor="#252742"
                        android:textSize="22dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.25"
                        android:fontFamily="@font/alatsi_regular"
                        android:gravity="center|top"
                        android:text="-list of your donations"
                        android:textColor="#00557e"
                        android:textSize="13dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="0dp"
                        android:layout_gravity="right"
                        android:layout_weight="0.25"
                        android:background="@drawable/cardview_textview_round"
                        android:backgroundTint="#00557e"
                        android:padding="7dp"
                        android:src="@drawable/forward_arrow"
                        android:id="@+id/charity_your_donations"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.42"
            android:padding="8dp"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="0.5"
                android:background="@drawable/cardview_back"
                android:backgroundTint="#5cd496"
                android:padding="8dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/recieved_donation" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/alatsi_regular"
                        android:gravity="bottom"
                        android:text="Recieved"
                        android:textAlignment="center"
                        android:textColor="#252742"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.25"
                        android:fontFamily="@font/alatsi_regular"
                        android:gravity="center|top"
                        android:text="-Donations"
                        android:textColor="#2e7b4e"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/recieved_donations"
                        android:layout_width="40dp"
                        android:layout_height="0dp"
                        android:layout_gravity="right"
                        android:layout_weight="0.25"
                        android:background="@drawable/cardview_textview_round"
                        android:backgroundTint="#2e7b4e"
                        android:padding="7dp"
                        android:src="@drawable/forward_arrow" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.5"
                android:background="@drawable/cardview_back"
                android:backgroundTint="#F366D8"
                android:orientation="horizontal"
                android:padding="8dp"
                android:weightSum="2">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/mem_list" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/alatsi_regular"
                        android:gravity="bottom"
                        android:text="Members"
                        android:textAlignment="center"
                        android:textColor="#252742"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.25"
                        android:fontFamily="@font/alatsi_regular"
                        android:gravity="center|top"
                        android:text="-List"
                        android:textColor="#9b0073"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/charity_member_list"
                        android:layout_width="40dp"
                        android:layout_height="0dp"
                        android:layout_gravity="right"
                        android:layout_weight="0.25"
                        android:background="@drawable/cardview_textview_round"
                        android:backgroundTint="#9b0073"
                        android:padding="7dp"
                        android:src="@drawable/forward_arrow" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>