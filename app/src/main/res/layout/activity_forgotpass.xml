<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    android:fitsSystemWindows="true"
    android:weightSum="1"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:text="Login help"
        android:textColor="@color/white"
        android:textSize="28dp"
        android:textStyle="bold"
        android:padding="20dp"
        android:fontFamily="sans-serif"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:text="Find your account"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:letterSpacing="0.03"
        android:gravity="center"
        android:fontFamily="@font/roboto_regular"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:text="@string/forgotpass"
        android:textColor="@color/lightgrey"
        android:gravity="center"
        android:textSize="16dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.07"
        android:layout_margin="28dp"
        android:background="@drawable/login_edittext_back"
        android:backgroundTint="#363636"
        android:hint="Enter your email"
        android:textColor="@color/white"
        android:paddingLeft="12dp"
        android:textSize="17dp"
        android:id="@+id/forgot_pass_email"
        android:textColorHint="@color/lightgrey"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.08"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:backgroundTint="#0195f7"
        android:text="Next"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:textStyle="bold"
        android:id="@+id/forgot_pass_next"
        android:fontFamily="@font/roboto_regular" />
</LinearLayout>